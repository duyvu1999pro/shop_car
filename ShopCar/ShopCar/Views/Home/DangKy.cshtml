@using CaptchaMvc.HtmlHelpers;
@using ShopCar.Model;
@model KhachHang


@{
    ViewBag.Title = "DangKy";
    Layout = "~/Views/Shared/_HomeLayout.cshtml";
}

<div class="col-9 product-price">
    <div class="register">
        <h1 style="color:black;text-align:center;">Đăng ký thành viên</h1>
        <form action="/Home/DangKy" method="post">
            <div class="col-md-6 register-top-grid">
                <h3>Thông tin cá nhân</h3>
                <div>
                    <span>Họ tên</span>
                    <input id="TenKH" name="TenKH" type="text" value="">
                    @Html.ValidationMessageFor(model => model.TenKH, "", new { @class = "text-danger" })
                </div>
                <div>
                    <span>Giới tính</span>
                    <input id="GioiTinh" name="GioiTinh" type="text" value="">
                    @Html.ValidationMessageFor(model => model.GioiTinh, "", new { @class = "text-danger" })
                </div>
                <div>
                    <span>Email</span>
                    <input id="Email" name="Email" type="text" value="">
                    @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                </div>
                <div>
                    <span>Số điện thoại</span>
                    <input id="SDT" name="SDT" type="text" value="">
                    @Html.ValidationMessageFor(model => model.SDT, "", new { @class = "text-danger" })
                </div>
                <div>
                    <span>Địa chỉ</span>
                    <input id="DiaChi" name="DiaChi" type="text" value="">
                    @Html.ValidationMessageFor(model => model.DiaChi, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="col-md-6 register-bottom-grid">
                <h3>Thông tin đăng nhập</h3>
                <div>
                    <span>Tài khoản</span>
                    <input id="UserName" name="UserName" type="text" value="">
                    @Html.ValidationMessageFor(model => model.UserName, "", new { @class = "text-danger" })
                </div>
                <div>
                    <span>Mật khẩu</span>
                    <input id="Pass" name="Pass" type="password">
                    @Html.ValidationMessageFor(model => model.Pass, "", new { @class = "text-danger" })
                </div>
                <div>
                    <span>Nhập lại mật khẩu</span>
                    <input id="NhapLaiMatKhau" name="NhapLaiMatKhau" type="password">
                </div>
                <div>
                    <span>Mã xác nhận:</span>
                    @Html.MathCaptcha()
                </div>
                <input type="submit" value="Đăng ký" class="btn btn-success" style="font-size:25px;">
            </div>
            <div class="clearfix"> </div>
        </form>
        
        <h2 style="color:red;">@ViewBag.ThongBao</h2>
    </div>
</div>


<style>
    .register-top-grid input[type="text"],
    .register-bottom-grid input[type="password"] {
        width: 100%;
        padding: 1em;
        margin: 1em 0;
        background: none;
        outline: none;
        border-radius: 3px;
        border: 1px solid #A09F9F;
        -webkit-appearance: none;
    }

    .register-bottom-grid input[type="text"] {
        width: 100%;
        padding: 1em;
        margin: 1em 0;
        background: none;
        border-radius: 3px;
        border: 1px solid #A09F9F;
        -webkit-appearance: none;
    }

    .product-price {
        margin: 20px auto;
    }
</style>